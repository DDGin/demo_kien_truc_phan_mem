@{
    ViewData["Title"] = "Author Management";
}

<h2>Author Management</h2>

<div class="mb-2">
    <button class="btn btn-primary" onclick="showCreateModal()">Add Author</button>
</div>

<table id="authorTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th style="width:150px">Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal for Create/Edit -->
<div class="modal fade" id="authorModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="authorForm">
                <div class="modal-header">
                    <h5 class="modal-title">Author</h5>
                    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="Id" name="Id" />
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" id="Name" name="Name" required />
                    </div>
                    <div class="form-group mt-2">
                        <label>Bio</label>
                        <textarea class="form-control" id="Bio" name="Bio"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        var table;
        $(document).ready(function () {
            table = $('#authorTable').DataTable({
                ajax: {
                    url: '/Author/GetAll',
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    { data: 'name' },
                    { data: 'bio' },
                    {
                        data: 'id',
                        render: function (data) {
                            return `
                                <button class="btn btn-sm btn-warning" onclick="editAuthor('${data}')">Edit</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteAuthor('${data}')">Delete</button>`;
                        }
                    }
                ]
            });

            // Submit form
            $('#authorForm').submit(function (e) {
                e.preventDefault();
                var id = $('#Id').val();
                var url = id ? '/Author/Update' : '/Author/Create';

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.success) {
                            $('#authorModal').modal('hide');
                            table.ajax.reload();
                            alert(res.message);
                        } else {
                            alert(res.message);
                        }
                    }
                });
            });
        });

        function showCreateModal() {
            $('#Id').val('');
            $('#Name').val('');
            $('#Bio').val('');
            $('#authorModal').modal('show');
        }

        function editAuthor(id) {
            $.get('/Author/GetAuthorById', { id: id }, function (res) {
                $('#Id').val(res.id);
                $('#Name').val(res.name);
                $('#Bio').val(res.bio);
                $('#authorModal').modal('show');
            });
        }

        function deleteAuthor(id) {
            if (confirm('Are you sure you want to delete this author?')) {
                $.ajax({
                    url: '/Author/Delete?id=' + id,
                    type: 'DELETE',
                    success: function (res) {
                        if (res.success) {
                            table.ajax.reload();
                            alert(res.message);
                        } else {
                            alert(res.message);
                        }
                    }
                });
            }
        }
    </script>
}
